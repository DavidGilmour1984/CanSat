HardwareSerial EbyteSerial(2); // Use UART2: TX=17, RX=16

void setup() {
  Serial.begin(115200);                   // For debug output
  EbyteSerial.begin(9600, SERIAL_8N1, 16, 17); // Ebyte TX/RX
  Serial.println("Receiver ready.");
}

void loop() {
  while (EbyteSerial.available()) {
    char c = EbyteSerial.read();
    Serial.write(c); // Print received data to Serial Monitor
  }
}

HardwareSerial EbyteSerial(2); // Use UART2: TX=17, RX=16

void setup() {
  Serial.begin(115200);                   // For debug output
  EbyteSerial.begin(9600, SERIAL_8N1, 16, 17); // Ebyte TX/RX
  Serial.println("Transmitter ready.");
}

void loop() {
  EbyteSerial.println("Hello from transmitter!");
  Serial.println("Sent: Hello from transmitter!");
  delay(1000); // Send every 1 second
}

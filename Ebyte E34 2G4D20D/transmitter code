#include <HardwareSerial.h>

#define EBYTE_RX 16
#define EBYTE_TX 17

HardwareSerial EbyteSerial(2);

uint32_t counter = 1;
unsigned long lastSendTime = 0;

void setup() {
  Serial.begin(115200);
  EbyteSerial.begin(9600, SERIAL_8N1, EBYTE_RX, EBYTE_TX);
  Serial.println("üöÄ Transmitter started (1 message/sec)...");
}

void loop() {
  unsigned long now = millis();

  if (now - lastSendTime >= 1000) {
    lastSendTime = now;
    String message = String(counter++);
    EbyteSerial.println(message);
    Serial.println("‚û°Ô∏è Sent: " + message);
  }
}
